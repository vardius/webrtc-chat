{
  "name": "webrtc-chat",
  "version": "2.0.0",
  "description": "Serverless chat application using peer to peer WebRTC",
  "scripts": {
    "clean:build": "rimraf build",
    "prebuild": "npm run clean:build",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.production.js --progress",
    "build:server": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.server.js --progress",
    "prestart": "npm install && npm run build",
    "start": "node build/server.js",
    "dev": "webpack-dashboard -- node ./bin/server.js",
    "lint": "eslint config src/** --ext .js",
    "test": "cross-env BABEL_ENV=commonjs jest --no-cache --config $(node jest.config.js)",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "tunnel": "lt --port 3000"
  },
  "bugs": {
    "url": "https://github.com/vardius/webrtc-chat/issues"
  },
  "homepage": "https://github.com/vardius/webrtc-chat",
  "author": {
    "name": "Rafa≈Ç Lorenz",
    "email": "vardius@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.23.0",
    "cookie-parser": "1.4.3",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^1.0.3",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "bootstrap": "^3.3.7",
    "bootstrap-sass": "^3.3.7",
    "browserslist": "^2.2.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "document-register-element": "^1.6.0",
    "electron-to-chromium": "^1.3.16",
    "eslint": "^4.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "font-awesome": "^4.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^22.1.4",
    "jest-cli": "^22.1.4",
    "jquery": "^3.2.1",
    "jsdom": "^11.1.0",
    "node-sass": "^4.5.2",
    "peer-data": "^3.0.23",
    "peer-data-server": "^1.0.9",
    "popper.js": "^1.12.9",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "url-loader": "^0.6.2",
    "web-component": "^1.0.23",
    "webpack": "^3.3.0",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.5.4",
    "webrtc-adapter": "^6.1.5"
  }
}
